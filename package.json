{
  "name": "genesis-engine",
  "version": "1.0.0",
  "description": "Genesis Engine - AI-Powered Startup Automation Platform",
  "main": "index.js",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:backend",
    "install:frontend": "cd app && npm install",
    "install:backend": "npm run install:api-gateway && npm run install:auth && npm run install:user && npm run install:company && npm run install:financial && npm run install:compliance && npm run install:crm && npm run install:calendar && npm run install:billing",
    "install:api-gateway": "cd backend/api-gateway && npm install",
    "install:auth": "cd backend/auth-service && npm install",
    "install:user": "cd backend/user-service && npm install",
    "install:company": "cd backend/company-service && npm install",
    "install:financial": "cd backend/financial-service && npm install",
    "install:compliance": "cd backend/compliance-service && npm install",
    "install:crm": "cd backend/crm-service && npm install",
    "install:calendar": "cd backend/calendar-service && npm install",
    "install:billing": "cd backend/billing-service && npm install",
    "build:all": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd app && npm run build",
    "build:backend": "npm run build:api-gateway && npm run build:auth && npm run build:user && npm run build:company && npm run build:financial && npm run build:compliance && npm run build:crm && npm run build:calendar && npm run build:billing",
    "build:api-gateway": "cd backend/api-gateway && npm run build",
    "build:auth": "cd backend/auth-service && npm run build",
    "build:user": "cd backend/user-service && npm run build",
    "build:company": "cd backend/company-service && npm run build",
    "build:financial": "cd backend/financial-service && npm run build",
    "build:compliance": "cd backend/compliance-service && npm run build",
    "build:crm": "cd backend/crm-service && npm run build",
    "build:calendar": "cd backend/calendar-service && npm run build",
    "build:billing": "cd backend/billing-service && npm run build",
    "test:all": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd app && npm run test",
    "test:backend": "npm run test:api-gateway && npm run test:auth && npm run test:user && npm run test:company && npm run test:financial && npm run test:compliance && npm run test:crm && npm run test:calendar && npm run test:billing",
    "test:api-gateway": "cd backend/api-gateway && npm run test",
    "test:auth": "cd backend/auth-service && npm run test",
    "test:user": "cd backend/user-service && npm run test",
    "test:company": "cd backend/company-service && npm run test",
    "test:financial": "cd backend/financial-service && npm run test",
    "test:compliance": "cd backend/compliance-service && npm run test",
    "test:crm": "cd backend/crm-service && npm run test",
    "test:calendar": "cd backend/calendar-service && npm run test",
    "test:billing": "cd backend/billing-service && npm run test",
    "lint:all": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd app && npm run lint",
    "lint:backend": "npm run lint:api-gateway && npm run lint:auth && npm run lint:user && npm run lint:company && npm run lint:financial && npm run lint:compliance && npm run lint:crm && npm run lint:calendar && npm run lint:billing",
    "lint:api-gateway": "cd backend/api-gateway && npm run lint",
    "lint:auth": "cd backend/auth-service && npm run lint",
    "lint:user": "cd backend/user-service && npm run lint",
    "lint:company": "cd backend/company-service && npm run lint",
    "lint:financial": "cd backend/financial-service && npm run lint",
    "lint:compliance": "cd backend/compliance-service && npm run lint",
    "lint:crm": "cd backend/crm-service && npm run lint",
    "lint:calendar": "cd backend/calendar-service && npm run lint",
    "lint:billing": "cd backend/billing-service && npm run lint",
    "db:seed": "echo 'Database seeding not yet implemented'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:unit": "jest --testPathPattern=unit",
    "dev:frontend": "cd app && npm run dev",
    "dev:services": "docker-compose -f docker-compose.yml -f docker-compose.override.yml up --build",
    "setup": "./scripts/setup.sh",
    "create-env": "./scripts/create-env.sh",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "monitoring:up": "docker-compose -f docker-compose.yml -f monitoring/docker-compose.monitoring.yml up -d",
    "monitoring:down": "docker-compose -f docker-compose.yml -f monitoring/docker-compose.monitoring.yml down"
  },
  "keywords": [
    "startup",
    "automation",
    "ai",
    "microservices",
    "typescript",
    "nextjs",
    "fastify"
  ],
