# =============================================================================
# GENESIS ENGINE - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains production environment variables
# NEVER commit actual secrets - use placeholders and override in deployment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
LOG_LEVEL=info
PORT=3001

# =============================================================================
# DATABASE CONFIGURATIONS
# =============================================================================
# PostgreSQL Database
DATABASE_URL=postgresql://genesis_user:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/genesis_db

# Neo4j Graph Database
NEO4J_URL=neo4j+s://${NEO4J_USER}:${NEO4J_PASSWORD}@${NEO4J_HOST}:${NEO4J_PORT}/genesis

# Redis Cache & Sessions
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Keys for External Services
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GOOGLE_AI_API_KEY=${GOOGLE_AI_API_KEY}
COHERE_API_KEY=${COHERE_API_KEY}

# Stripe Payment Processing
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
EMAIL_FROM=Genesis Engine <noreply@genesisengine.com>

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS
# =============================================================================
# HMRC API (UK Tax Authority)
HMRC_API_KEY=${HMRC_API_KEY}
HMRC_BASE_URL=https://api.service.hmrc.gov.uk

# Companies House API (UK Company Registry)
COMPANIES_HOUSE_API_KEY=${COMPANIES_HOUSE_API_KEY}
COMPANIES_HOUSE_BASE_URL=https://api.company-information.service.gov.uk

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
# Sentry Error Tracking
SENTRY_DSN=${SENTRY_DSN}

# =============================================================================
# CACHE & PERFORMANCE
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL=300
REDIS_CACHE_ENABLED=true

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGIN=${CORS_ORIGIN}

# =============================================================================
# SERVICE DISCOVERY
# =============================================================================
AUTH_SERVICE_URL=http://auth-service.genesis-engine.svc.cluster.local:3002
USER_SERVICE_URL=http://user-service.genesis-engine.svc.cluster.local:3004
COMPANY_SERVICE_URL=http://company-service.genesis-engine.svc.cluster.local:3005
FINANCIAL_SERVICE_URL=http://financial-service.genesis-engine.svc.cluster.local:3006
COMPLIANCE_SERVICE_URL=http://compliance-service.genesis-engine.svc.cluster.local:3007
CRM_SERVICE_URL=http://crm-service.genesis-engine.svc.cluster.local:3008
CALENDAR_SERVICE_URL=http://calendar-service.genesis-engine.svc.cluster.local:3009
BILLING_SERVICE_URL=http://billing-service.genesis-engine.svc.cluster.local:3010
QUEUE_SERVICE_URL=http://queue-service.genesis-engine.svc.cluster.local:3014

# =============================================================================
# CDN & STATIC ASSETS
# =============================================================================
CDN_URL=${CDN_URL}
STATIC_ASSETS_URL=${STATIC_ASSETS_URL}

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=${BACKUP_S3_BUCKET}

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURITY_HEADERS_ENABLED=true
HSTS_ENABLED=true
CSP_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_NEXUS_ENABLED=true
FEATURE_COMPLIANCE_ENABLED=true
FEATURE_FINANCIAL_ENABLED=true
FEATURE_CRM_ENABLED=true
FEATURE_CALENDAR_ENABLED=true
FEATURE_PULSE_ENABLED=true
FEATURE_AI_INSIGHTS_ENABLED=true
FEATURE_ADVANCED_ANALYTICS_ENABLED=true

# =============================================================================
# PERFORMANCE MONITORING
# =============================================================================
APM_ENABLED=true
TRACING_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================
AUDIT_LOG_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================
DEFAULT_TIMEZONE=Europe/London
DEFAULT_CURRENCY=GBP
DEFAULT_TAX_RATE=0.20
INVOICE_DUE_DAYS=30
TRIAL_PERIOD_DAYS=14
MAX_COMPANY_USERS=50
MAX_STORAGE_GB=10